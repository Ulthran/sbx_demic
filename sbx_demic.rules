rule run_demic:
    input:
        sam_dir = str(MAPPING_FP/'demic'/'sorted')
        fasta_dir = os.path.dirname(str(Cfg['sbx_demic']['contigs_fasta']))
    output:
        str(MAPPING_FP/'demic'/'DEMIC_OUT')
    params:
        keep_all = Cfg['sbx_demic']['keepall']
    threads:
        Cfg['sbx_demic']['threads']
    conda:
        "sbx_demic_env.yml"
    shell:
        """
        perl DEMIC.pl --output_all {params.keep_all} \
        --thread_num {threads} \
        -S {input.sam_dir} -F {input.fasta_dir} \
        -O {output}
        """

